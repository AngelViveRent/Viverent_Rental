<odoo>
    <record id="view_viverent_renta_kanban" model="ir.ui.view">
        <field name="name">viverent.renta.kanban</field>
        <field name="model">viverent.renta</field>
        <field name="arch" type="xml">
            <kanban default_group_by="estado_id">
                <field name="name"/>
                <field name="estado_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record_title">
                            <strong><field name="name"/></strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
